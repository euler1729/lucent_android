<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/id_spending_table_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:backgroundTint="@color/teal_700"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_table_description"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Description"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/id_table_amount"
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Amount"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/id_table_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time"
                android:textColor="#000000" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_spending_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_spending_table_header"
            android:padding="5dp"
            tools:ignore="NestedScrolling" />

    </RelativeLayout>

</layout>