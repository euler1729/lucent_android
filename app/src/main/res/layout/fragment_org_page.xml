<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_org_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:context=".view.OrgPageFragment">

        <ImageView
            android:id="@+id/id_orgpage_cover"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/id_orgpage_profilepic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="236dp"
            android:background="@drawable/image_bg"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            android:src="@drawable/cover_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/id_orgpage_orgName"
            android:layout_width="271dp"
            android:layout_height="36dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="68dp"
            android:fontFamily="@font/acme"
            android:includeFontPadding="true"
            android:text="Organization Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/id_orgpage_balance"
            android:layout_width="223dp"
            android:layout_height="33dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="376dp"
            android:fontFamily="@font/aladin"
            android:text="Balance: 1000 /-"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:flow_verticalAlign="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/id_orgpage_donate"
            android:layout_width="144dp"
            android:layout_height="55dp"
            android:layout_marginTop="352dp"
            android:layout_marginEnd="16dp"
            android:drawableLeft="@drawable/icon_send"
            android:fontFamily="@font/acme"
            android:text="Donate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="432dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="244dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Spending" />

            <View
                android:id="@+id/divider"
                android:layout_width="200dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <ListView
                android:id="@+id/id_spending_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="NestedScrolling" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Top Donators" />

            <View
                android:layout_width="200dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <ListView
                android:id="@+id/id_top_donations"
                android:layout_width="408dp"
                android:layout_height="188dp"
                android:layout_gravity="center"
                tools:ignore="NestedScrolling" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
</layout>