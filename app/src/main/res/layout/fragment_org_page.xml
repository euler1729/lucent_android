<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_org_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/id_org_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:context=".view.OrgPageFragment">

                    <ImageView
                        android:id="@+id/id_orgpage_cover"
                        android:layout_width="414dp"
                        android:layout_height="223dp"
                        android:contentDescription="Organizations page cover photo"
                        android:scaleType="fitXY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <ImageView
                        android:id="@+id/id_orgpage_profilepic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="176dp"
                        android:background="@drawable/image_bg"
                        android:contentDescription="TODO"
                        android:scaleType="fitXY"
                        android:src="@drawable/cover_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/id_orgpage_orgName"
                        android:layout_width="268dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="232dp"
                        android:fontFamily="@font/acme"
                        android:includeFontPadding="true"
                        android:text="Organization Name"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.923"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/id_orgpage_balance"
                        android:layout_width="223dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="304dp"
                        android:fontFamily="@font/aladin"
                        android:text="Balance: 1000 /-"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:flow_verticalAlign="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/id_donate_btn"
                        android:layout_width="134dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="276dp"
                        android:layout_marginEnd="40dp"
                        android:drawableLeft="@drawable/icon_send"
                        android:fontFamily="@font/acme"
                        android:text="Donate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/id_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/id_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="244dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/acme"
                            android:gravity="center"
                            android:text="Spendings" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="200dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="?android:attr/listDivider" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/id_spending_table_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#673AB7"
                                android:backgroundTint="@color/teal_700"
                                android:isScrollContainer="false"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/id_table_description"
                                    android:layout_width="116dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Description"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/id_table_amount"
                                    android:layout_width="134dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Amount"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/id_table_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Time"
                                    android:textColor="#000000" />

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/id_spending_table"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/id_spending_table_header"
                                android:padding="5dp"
                                tools:ignore="NestedScrolling" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/id_latest_donation_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/acme"
                                    android:gravity="center"
                                    android:text="Latest Donations" />

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="?android:attr/listDivider" />

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/id_latest_donation_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/id_latest_donation_header"/>
                        </RelativeLayout>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>