<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/border_radios_background">


    <EditText
        android:id="@+id/id_nid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="17dp"
        android:autofillHints=""
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="NID number"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/id_membership_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:autofillHints=""
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="Membership Code"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/id_req_popup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:text="Request Membership" />


</LinearLayout>