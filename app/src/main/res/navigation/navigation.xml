<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/topOrgFragment"
        android:name="com.example.lucent.view.TopOrgFragment"
        android:label="Top Organization"
        tools:layout="@layout/fragment_top_org" >
        <action
            android:id="@+id/action_topOrgFragment_to_myOrgFragment"
            app:destination="@id/myOrgFragment" />
        <action
            android:id="@+id/action_topOrgFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="OrgArg"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/myOrgFragment"
        android:name="com.example.lucent.view.MyOrgFragment"
        android:label="fragment_my_org"
        tools:layout="@layout/fragment_my_org" >
        <action
            android:id="@+id/action_myOrgFragment_to_topOrgFragment4"
            app:destination="@id/topOrgFragment" />
        <action
            android:id="@+id/action_myOrgFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lucent.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_myOrgFragment"
            app:destination="@id/myOrgFragment" />
        <action
            android:id="@+id/action_homeFragment_to_topOrgFragment"
            app:destination="@id/topOrgFragment" />
    </fragment>
</navigation>